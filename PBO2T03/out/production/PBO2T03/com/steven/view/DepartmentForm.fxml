<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="departmentForm" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.steven.controller.DepartmentFormControl">
    <children>
        <GridPane vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nama" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" />
                <Button mnemonicParsing="false" onAction="#tambahAction" text="Tambah" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Kode" GridPane.rowIndex="1" />
            <Label text="Fakultas" GridPane.rowIndex="2" />
            <TextField fx:id="txtKode" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <TableView fx:id="tableDepartment" onMouseClicked="#tableCllicked" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="col01" prefWidth="217.0" text="Nama" />
            <TableColumn fx:id="col02" prefWidth="175.0" text="Kode" />
            <TableColumn fx:id="col03" prefWidth="183.0" text="Fakultas" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
